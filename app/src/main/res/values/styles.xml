<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/customfont</item>
        <item name="fontFamily">@font/customfont</item>
    </style>

    <style name="EditTextCustom" parent="Base.Widget.AppCompat.EditText">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">48sp</item>
        <item name="android:hint">1210</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="backgroundTint">@color/colorAccent</item>


    </style>
</resources>
